<div class="container-fluid bg-light-subtle d-flex align-items-center justify-content-center" style="height: 90vh;">
<div class="row" style="width: 100%">
<div class="col-2"></div>
<div class="col-8">
  <div class="container d-flex justify-content-center">
    <div class="card" style="width: 100%">
      <div class="card pt-3 pb-5" style="box-shadow: 7px 7px 21px -5px rgba(0,0,0,0.38); border: none;">
        <div class="card-body d-flex flex-column justify-content-center">
                <h1 class="text-center " style="font-family: 'Roboto', sans-serif">APPROVE USERS</h1>
        </div>
        <div class="p-3" style="max-height: 400px; overflow-y: auto;">

        <table class="table table-hover mt-4">
        <thead>
    <tr class="table-success">
      <th class="text-center p-3">Username</th>
      <th class="text-center p-3">Email</th>
      <th class="text-center p-3">Approved</th>
      <th class="text-center p-3">Approved by</th>
      <th class="text-center p-3">Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @authusers.each do |authuser| %>
      <tr>
        <td class="text-center pt-3"><%= authuser.username.capitalize %></td>
        <td class="text-center pt-3"><%= authuser.email %></td>
        <td class="text-center pt-3"><%= authuser.approved? ? "Yes" : "Not yet " %></td>
        <td class="text-center pt-3"><%= authuser.user_detail ? authuser.user_detail.username.capitalize : "None" %></td>
        <% if !authuser.approved %>
        <td class="btn-group d-flex justify-content-center">
          <%= link_to "Approve", approve_user_path(authuser), method: :post, class: "btn btn-success ps-1 pe-1" %>
          <%= link_to "Reject", reject_user_path(authuser), method: :post, class: "btn btn-danger ps-1 pe-1" %>
        </td>
        <% else %>
        <td class="text-center btn-group d-flex justify-content-center">
          <%= link_to "Approved", approve_user_path(authuser), method: :post, class: "btn btn-success disabled ps-1 pe-1  " %>
          <%= link_to "Edit", edit_user_detail_path(authuser), method: :get, class: "btn ps-1 pe-1 text-white", style: "background: #E1AEFF" %>
        </td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
</div>
    </div>
    </div>
</div>
<div class="col-2"></div>
</div>

</div>