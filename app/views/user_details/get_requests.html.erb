<div class="container-fluid bg-light-subtle d-flex align-items-center justify-content-center" style="height: 90vh;">
<div class="row" style="width: 100%">
<div class="col-2"></div>
<div class="col-8">
  <div class="container d-flex justify-content-center">
    <div class="card" style="width: 100%">
      <div class="card pt-4 pb-5" style="box-shadow: 7px 7px 21px -5px rgba(0,0,0,0.38); border: none;">
        <div class="card-body d-flex flex-column justify-content-center ">
                <h1 class="text-center" style="font-family: 'Roboto', sans-serif">MY REQUESTS</h1>
        </div>
        <div class="p-3" style="max-height: 400px; overflow-y: auto;">

        <table class="table table-hover">
        <thead>
    <tr class="table-success">
      <th class="text-center p-3">ID</th>
      <th class="text-center p-3">Approval User</th>
      <th class="text-center p-3">Time</th>
      <th class="text-center p-3">Approved</th>
      <th class="text-center p-3">Approved by</th>
    </tr>
  </thead>

  <tbody>
    <% @requests.each do |request| %>
      <tr>
        <td class="text-center pt-3"><%= request.id %></td>
        <td class="text-center pt-3"><%= request.approval_user.capitalize %></td>
        <td class="text-center pt-3"><%= time_ago_in_words(request.created_at) %></td>
        <td class="text-center pt-3"><%= request.approved ? "Yes" : "No" %></td>
        <td class="text-center pt-3"><%= request.approved_user.capitalize if request.approved_user %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
</div>
    </div>
    </div>
</div>
<div class="col-2"></div>
</div>

</div>